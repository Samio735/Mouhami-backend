
-- Create Specialities table
CREATE TABLE Specialities (
    specialities_id INTEGER PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL
);

-- Create Language table
CREATE TABLE Language (
    language_id INTEGER PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL
);

CREATE TABLE Lawyer (
    id INTEGER PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,
    location VARCHAR(255) NOT NULL,
    phone VARCHAR(20) NOT NULL,
    email VARCHAR(254) NOT NULL,
    photo VARCHAR(255) NOT NULL,
    lng REAL NULL,
    lat REAL NULL,    
    rating REAL NULL
    );

-- Create Many-to-Many relationship tables
CREATE TABLE Lawyer_specialities (
    lawyer_id INTEGER,
    specialities_id INTEGER,
    PRIMARY KEY (lawyer_id, specialities_id),
    FOREIGN KEY (lawyer_id) REFERENCES Lawyer (id),
    FOREIGN KEY (specialities_id) REFERENCES Specialities (specialities_id)
);

CREATE TABLE Lawyer_languages (
    lawyer_id INTEGER,
    languages_id INTEGER,
    PRIMARY KEY (lawyer_id, languages_id),
    FOREIGN KEY (lawyer_id) REFERENCES Lawyer (id),
    FOREIGN KEY (languages_id) REFERENCES Language (language_id)
);









